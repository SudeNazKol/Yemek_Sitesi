 <div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h5 class="section-title ff-secondary text-center text-primary fw-normal">Afiyetle Blog</h5>
            <h1 class="mb-5">Yeni Tarif Ekle</h1>
        </div>

        <!-- Tarif Ekleme Formu -->
        <form action="#" method="POST">
            <div class="row">
                <!-- Yemek İsmi -->
                <div class="col-md-12 mb-4">
                    <label for="title" class="form-label">Yemek İsmi</label>
                    <input type="text" class="form-control" id="title" name="title" required placeholder="Yemek ismi...">
                </div>

                <!-- Kategori Seçimi -->
                <div class="col-md-12 mb-4">
                    <label for="category" class="form-label">Kategori</label>
                    <select class="form-select" id="category" name="category" required>
                        <option value="corbalar-ve-baslangiclar">Çorbalar ve Başlangıçlar</option>
                        <option value="ana-yemekler">Ana Yemekler</option>
                        <option value="pilavlar-makarna-ve-yan-yemekler">Pilavlar, Makarna ve Yan Yemekler</option>
                        <option value="tatlilar-ve-pastalar">Tatlılar ve Pastalar</option>
                        
                    </select>
                </div>

                <!-- Malzemeler -->
                <div class="col-md-12 mb-4">
                    <label for="ingredients" class="form-label">Malzemeler</label>
                    <textarea class="form-control" id="ingredients" name="ingredients" rows="5" placeholder="Malzemeleri aralarına virgül koyarak yazın..." required></textarea>
                </div>

                <!-- Açıklama -->
                <div class="col-md-12 mb-4">
                    <label for="instructions" class="form-label">Yapılışı</label>
                    <textarea class="form-control" id="instructions" name="instructions" rows="6" placeholder="Yapılış açıklamasını yazın..." required></textarea>
                </div>

                <!-- Gönder Butonu -->
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-primary"> Kaydet</button>
                </div>
            </div>
        </form>
    </div>
